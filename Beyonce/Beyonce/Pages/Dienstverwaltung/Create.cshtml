@page
@model Beyonce.Pages.Dienstverwaltung.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Dienst</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dienst.Dienstart" class="control-label"></label>
                <select asp-for="Dienst.Dienstart" class="form-control">
                    <option value="WMS">WMS</option>
                    <option value="WMTS">WMTS</option>
                </select>
                <span asp-validation-for="Dienst.Dienstart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dienst.Bezeichnung" class="control-label"></label>
                <input asp-for="Dienst.Bezeichnung" class="form-control" />
                <span asp-validation-for="Dienst.Bezeichnung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dienst.Url" class="control-label"></label>
                <input asp-for="Dienst.Url" class="form-control" />
                <span asp-validation-for="Dienst.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Land.LandBez" class="control-label"></label>
                <input asp-for="Dienst.Url" class="form-control" />
                <span asp-validation-for="Dienst.Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Länder</label>
                <select asp-items="Model.getLänder()"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
